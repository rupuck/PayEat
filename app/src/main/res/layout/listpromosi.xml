<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:andoid="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imagePromosi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idPromosi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"

            andoid:visibility="gone" />

        <TextView
            android:id="@+id/namaPromosi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensansextrabold"
            android:text="Nama"
            android:textColor="@color/darkpayit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hargaPromosi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensanssemibold"
            android:text="harga"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deskripsiPromosi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensansitalic"
            android:text="Description"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
